<script>
  function calculateDurationAndAmount() {
    // Get the check-in and check-out dates from the input fields
    let checkinInput = document.getElementById("checkinDate");
    let checkoutInput = document.getElementById("checkoutDate");

    let checkinDate = new Date(checkinInput.value);
    let checkoutDate = new Date(checkoutInput.value);

    // Calculate the time difference in milliseconds
    let timeDiff = checkoutDate.getTime() - checkinDate.getTime();

    // Convert the time difference to days
    let totalStay = Math.ceil(timeDiff / (1000 * 3600 * 24));

    // Display the duration of stay
    let durationElement = document.getElementById("durationResult");
    durationElement.textContent = "Duration of stay: " + totalStay + " days";

    // Calculate the total amount
    let pricePerNight = {{property.price}}; // Replace with the actual price per night
    let totalAmount = totalStay * pricePerNight;

    // Display the total amount
    let totalAmountElement = document.getElementById("totalAmount");
    totalAmountElement.textContent = totalAmount;

    
  }
</script>

<script>
  // Event listener for date input changes
  let checkinInput = document.getElementById("checkinDate");
  let checkoutInput = document.getElementById("checkoutDate");

  checkinInput.addEventListener("change", calculateDurationAndAmount);
  checkoutInput.addEventListener("change", calculateDurationAndAmount);

