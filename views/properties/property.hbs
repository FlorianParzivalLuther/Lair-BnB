{{!Property Booking}}
  <div class="col-6">
  <div class="container mb-4">
    <div class="card">
      <div class="card-body bg-light">

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-body">
                <img src="" class="img-fluid" alt="Zoomed Image">
              </div>
            </div>
          </div>
        </div>

        <div class="container mb-4">
          <div class="card">
              <form class="card-body" action="/booking/" method="POST">
              <h5 class="card-title">Price Details</h5>
              <p class="card-text">Price per night: ${{property.price}}</p>
              <p class="card-text">Check-in: <input type="date" id="checkinDate" name="startDate"></p>
              <p class="card-text">Check-out: <input type="date" id="checkoutDate" name="endDate"></p>
               <p class="card-text">Number of guests: <input type="number" name="guests" min="1" max="{{property.maxGuests}}"></p>
              <p class="card-text" id="durationResult">Total stay: </p>
              <p class="card-text">Total amount: $<span id="totalAmount"></span></p>
              <input type="hidden" name="totalPrice" id="totalPriceInput">
              <input type="hidden" name="propertyId" value="{{property._id}}">
        
              {{!-- {{if isLoggedIn}} --}}
                <button type="submit" value="Add Bookings">Add Bookings</button>
              {{!-- {{/if}} --}}
            </form>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<script>
  function calculateDurationAndAmount() {
    // Get the check-in and check-out dates from the input fields
    let checkinInput = document.getElementById("checkinDate");
    let checkoutInput = document.getElementById("checkoutDate");

    let checkinDate = new Date(checkinInput.value);
    let checkoutDate = new Date(checkoutInput.value);

    // Calculate the time difference in milliseconds
    let timeDiff = checkoutDate.getTime() - checkinDate.getTime();

    // Convert the time difference to days
    let totalStay = Math.ceil(timeDiff / (1000 * 3600 * 24));

    // Display the duration of stay
    let durationElement = document.getElementById("durationResult");
    durationElement.textContent = "Duration of stay: " + totalStay + " days";

    // Calculate the total amount
    let pricePerNight = {{property.price}}; // Replace with the actual price per night
    let totalAmount = totalStay * pricePerNight;

    // Display the total amount
    let totalAmountElement = document.getElementById("totalAmount");
    totalAmountElement.textContent = totalAmount;

    document.getElementById('totalPriceInput').value = totalAmount;
  }
</script>

<script>
  // Event listener for date input changes
  let checkinInput = document.getElementById("checkinDate");
  let checkoutInput = document.getElementById("checkoutDate");

  checkinInput.addEventListener("change", calculateDurationAndAmount);
  checkoutInput.addEventListener("change", calculateDurationAndAmount);

</script>
