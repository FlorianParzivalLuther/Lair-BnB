{{! properties.hbs }}



<div class="row">
  <div class="col-12">
    
    <h5 class="text-start mt-5" style="max-height: 3.6em; overflow: hidden; font-size: 3.0rem;">{{property.title}}</h5>
    <div class="d-flex align-items-center">
  <img src="https://res.cloudinary.com/dxggkj0l2/image/upload/v1688398397/samples/properties/ring_rating_qcoyis.png" class="text-start mr-2" style="height: 1.5em; width: auto; margin-right: 0.5rem;"><h5 class="text-start mr-5"> 10.5 </h5>
  <h5 class="text-start" style="max-height: 3.6em; overflow: hidden; font-size: 1.2rem;">{{property.location}}</h5><br>
</div>
<h5 class="text-start mt-2" style="max-height: 3.6em; overflow: hidden; font-size: 0.8rem;">Here comes the Hostname and a <a href="home">link</a> to another property of him/her</h5>
  </div>
</div>
<br>

<div class="row">
    <div class="col-12">
        <p>{{property.description}}</p>
    </div>
</div>




<div class="container-lg">
  <div class="row">
    <div class="col-md-9">
      <div id="imageGallery" class="carousel slide" data-bs-ride="carousel" style="padding-bottom: 80%; position: relative;">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-bs-target="#imageGallery" data-bs-slide-to="0" class="active"></li>
          <li data-bs-target="#imageGallery" data-bs-slide-to="1"></li>
          <li data-bs-target="#imageGallery" data-bs-slide-to="2"></li>
        </ol>

        <!-- Images -->
        <div class="carousel-inner" style="position: absolute; top: 0; bottom: 0; left: 0; right: 0;">

          <div class="carousel-item active">
            <img src="{{property.images.[0]}}" class="d-block w-100 h-100" style="object-fit: cover;" alt="Image 1">
          </div>

          <div class="carousel-item">
            <img src="{{property.images.[1]}}" class="d-block w-100 h-100" style="object-fit: cover;" alt="Image 2">
          </div>

          <div class="carousel-item">
            <img src="{{property.images.[2]}}" class="d-block w-100 h-100" style="object-fit: cover;" alt="Image 3">
          </div>

          <div class="carousel-item">
            <img src="{{property.images.[3]}}" class="d-block w-100 h-100" style="object-fit: cover;" alt="Image 4">
          </div>

          <div class="carousel-item">
            <img src="{{property.images.[4]}}" class="d-block w-100 h-100" style="object-fit: cover;" alt="Image 5">
          </div>

          <div class="carousel-item">
            <img src="{{property.images.[5]}}" class="d-block w-100 h-100" style="object-fit: cover;" alt="Image 6">
          </div>

        </div>

        <!-- Controls -->
        <a class="carousel-control-prev" href="#imageGallery" role="button" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden"></span>
        </a>
        <a class="carousel-control-next" href="#imageGallery" role="button" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden"></span>
        </a>
      </div>
    </div>
  </div>
</div>





<div class="container mb-4">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Price Details</h5>
      <p class="card-text">Price per night: ${{property.price}}</p>
      <p class="card-text">Check-in: {{checkinDate}}</p>
      <p class="card-text">Check-out: {{checkoutDate}}</p>
      <p class="card-text">Total amount: ${{totalAmount}}</p>
      <a href="#" class="btn btn-primary">Add to Bookings</a>
    </div>
  </div>
</div>






 <!-- Include jQuery library -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- Include Bootstrap JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.min.js"></script>











