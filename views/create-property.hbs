<h1>Create Property</h1>

<form action="/property/create" method="POST">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" required /><br />

  <label for="description">Description:</label>
  <textarea id="description" name="description" required></textarea><br />

  <label for="location">Location:</label>
  <input type="text" id="location" name="location" required /><br />

  <label for="price">Price:</label>
  <input type="number" id="price" name="price" required /><br />

  <label for="amenities">Amenities:</label>
  <textarea id="amenities" name="amenities" rows="4" required></textarea>
  <small>Enter each amenity on a new line.</small><br />

  <label for="images">Images:</label>
  <input type="file" id="images" name="images" accept="image/*" multiple /><br
  />

  <input type="submit" value="Create Property" />
</form>